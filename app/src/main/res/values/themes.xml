<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVVMArchitecture" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="editButton" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">@dimen/dimen_30dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="margin" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginStart">@dimen/dimen_30dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_30dp</item>
    </style>

    <style name="Base.Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/dimen_30dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_30dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_30dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_30dp</item>
    </style>

    <style name="circleImageviewOne" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>